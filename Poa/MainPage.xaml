<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="Poa.MainPage">

    <Grid> 
 
        <Image x:Name="img"
                Aspect="Fill"/>
         <Frame  HeightRequest="120"
                 CornerRadius="20"
                 BackgroundColor="#a38d6d"
                 Margin="20"
                 VerticalOptions="Start">
                <Grid>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width= "*"/>
                        </Grid.ColumnDefinitions>


                        <Image Source="bolinha.png"
                                Grid.Row="0"
                                Grid.Column="0"/>
                        
                        <ProgressBar x:Name="progressoBrincar"
                                     ProgressColor="#b3d166"
                                     Grid.Row="0"
                                     Grid.Column="1"/> 


                        <Image Source="agua.png"
                                Grid.Row="1"
                                Grid.Column="0"/>

                        <ProgressBar x:Name="progressoSede"
                                ProgressColor="#8fccc5"
                                Width="100"
                                Height="20"
                                Grid.Row="1"
                                Grid.Column="1"/>
                                

                        <Image Source="osso.png"
                                Grid.Row="2"
                                Grid.Column="0"/>

                        <ProgressBar x:Name="progressoFome"
                                ProgressColor="#c98dc7"
                                Width="100"
                                Height="20"
                                Grid.Row="2"
                                Grid.Column="1"/>
                </Grid>
         </Frame>
             
         <Frame BackgroundColor="#a38d6d"
               CornerRadius="20"
               HeightRequest="200"
               WidthRequest="70"
               Margin="20, 0, 0, 0" 
               HorizontalOptions="Start"
               Padding="5"
               BorderColor="#a38868"
>

                <Grid>

                        <Grid.RowDefinitions>
                                <RowDefinition Height= "*"/>
                                <RowDefinition Height= "*"/>
                                <RowDefinition Height= "*"/>
                                <RowDefinition Height= "*"/>
                        </Grid.RowDefinitions>


                        <ImageButton Source="bolinha.png"
                                Clicked="AumentaBrincar"
                                BackgroundColor="#a38868"
                                Grid.Column="0"
                                Grid.Row="0"/>

                        <ImageButton Source="agua.png"
                                Clicked="AumentaSede"
                                BackgroundColor="#a38868"
                                Grid.Column="1"
                                Grid.Row="1"/>

                        <ImageButton Source="osso.png"   
                                Clicked="AumentaFome"
                                BackgroundColor="#a38868"
                                Grid.Column="2"
                                Grid.Row="2"/>


                         <ImageButton Source="seta.png"   
                                Clicked="TrocaPersonagem"
                                BackgroundColor="#a38868"
                                Grid.Column="3"
                                Grid.Row="3"/>



                </Grid>
        </Frame>
                               
</Grid>

    
</ContentPage>
